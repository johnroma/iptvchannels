{
  "include": ["src/**/*.ts", "src/**/*.tsx", "*.ts", "*.config.ts"],
  "exclude": ["packages/**/*"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./packages/ui/*"],
      "@ui/*": ["./packages/ui/*"]
    },
    "noEmit": true
  }
}
