{
  "name": "iptvchannels",
  "version": "1.0.0",
  "description": "IPTV Channel Management - TanStack Start + Drizzle + Supabase",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "db:generate": "dotenv -e env-profiles/local.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e env-profiles/local.env -- drizzle-kit migrate",
    "db:push": "dotenv -e env-profiles/local.env -- drizzle-kit push",
    "db:push:prod": "dotenv -e env-profiles/prod.env -- drizzle-kit push",
    "db:studio": "dotenv -e env-profiles/local.env -- drizzle-kit studio",
    "db:studio:prod": "dotenv -e env-profiles/prod.env -- drizzle-kit studio",
    "db:seed": "dotenv -e env-profiles/local.env -- tsx src/db/seed.ts",
    "db:psql": "dotenv -e env-profiles/local.env -- psql $DATABASE_URL",
    "db:psql:prod": "dotenv -e env-profiles/prod.env -- psql $DATABASE_URL",
    "supabase": "dotenv -e env-profiles/supabase.env -- supabase",
    "sb:status": "dotenv -e env-profiles/supabase.env -- supabase inspect db table-stats --linked"
  },
  "keywords": ["iptv", "channels", "tanstack", "drizzle", "supabase"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
