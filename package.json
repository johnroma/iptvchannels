{
  "name": "iptvchannels",
  "version": "1.0.0",
  "description": "IPTV Channel Management - TanStack Start + Drizzle + Supabase",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "predev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "dev": "dotenv -e env-profiles/local.env -- vite dev --strictPort",
    "dev:prod": "dotenv -e env-profiles/prod.env -- vite dev --strictPort",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node .output/server/index.mjs",
    "db:generate": "dotenv -e env-profiles/local.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e env-profiles/local.env -- drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e env-profiles/prod.env -- drizzle-kit migrate",
    "db:push": "dotenv -e env-profiles/local.env -- drizzle-kit push",
    "db:push:prod": "dotenv -e env-profiles/prod.env -- drizzle-kit push",
    "db:studio": "dotenv -e env-profiles/local.env -- drizzle-kit studio",
    "db:studio:prod": "dotenv -e env-profiles/prod.env -- drizzle-kit studio",
    "db:seed": "dotenv -e env-profiles/local.env -- tsx src/db/seed.ts",
    "db:seed:prod": "dotenv -e env-profiles/prod.env -- tsx src/db/seed.ts",
    "db:reset": "dotenv -e env-profiles/local.env -- tsx src/db/reset.ts",
    "db:reset:prod": "dotenv -e env-profiles/prod.env -- tsx src/db/reset.ts",
    "db:psql": "dotenv -e env-profiles/local.env -- psql",
    "db:psql:prod": "dotenv -e env-profiles/prod.env -- psql",
    "supabase": "dotenv -e env-profiles/supabase.env -- supabase",
    "sb:status": "dotenv -e env-profiles/supabase.env -- supabase inspect db table-stats --linked",
    "ui:add": "pnpm -F ui ui:add",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "iptv",
    "channels",
    "tanstack",
    "drizzle",
    "supabase"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "latest",
    "@tanstack/react-router": "^1.144.0",
    "@tanstack/react-router-devtools": "^1.144.0",
    "@tanstack/react-router-ssr-query": "^1.144.0",
    "@tanstack/react-start": "^1.145.4",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "nitro": "3.0.1-alpha.1",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-router-devtools": "^1.144.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "onlyBuiltDependencies": []
  }
}
